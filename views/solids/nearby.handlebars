<h1 class="titlesearch">SOLIDS NEAR YOU<h1>

<form action="/neaby" method="POST">
<label for="search" class="smalllabel">
  Zip +/-: <input type="range" name="searchTerm" id="searchTerm" class="submits" min="0" max="100" oninput="slide()"><span id="demo"></span>
</label>
<input type="submit" value="Submit" id="button" class="submits">
</form>

{{#each solid}}
  <a class="solidcardlink" href = "">
    <div class="solidcard">
      <div class="cardelem">{{this.postedBy}}</div>
      <div class="cardelem">{{this.description}}</div>
      <div class="cardelem">${{this.price}}</div>
      <div class="cardelem">{{this.location}}</div>
      <div class="cardelem">{{this.timestamp}}</div>
      <div class="cardelembot">{{this.tags}}</div>
    </div>
  </a>
{{/each}}

<p class="error">{{error}}</p>
