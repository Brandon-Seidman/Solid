<h1 class="title">NEW SOLIDS<h1>
    {{!-- button to trigger modal for solid form --}}
    <div id="solid_button">
      <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#solidPostModal">
        Post a Solid!
      </button>
      {{!-- modal for post a solid form --}}
      <div class="modal fade" id="solidPostModal" role="dialogue" tabindex="-1" aria-labelledby="modal"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">

              <form id="post_solid" class="form">
                <div class="mb-3">
                  <label for="body" class="form-label">What do you need?</label>
                  <textarea type="body" rows="4" cols="50" class="form-control" id="body"></textarea>
                </div>
                <div class="input-group mb-3">
                  <div class="container">
                    <div class="row">
                      <div class="col align-self-start">
                        <span class="input-group-text">$</span>
                      </div>
                      <div class="col align-self-center">
                        <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)">
                      </div>
                      <div>
                        <input type="hidden" id="name" value={{user}} />
                      </div>
                      <div class="col align-self-end">
                        <span class="input-group-text">.00</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="mb-3 form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1" />
                  <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" value="Submit" data-dismiss="modal" form="post_solid">
                  Submit
                </button>



              </form>




            </div>

          </div>
        </div>




      </div>

    </div>

    <a class="solidcardlink" href="">
      <div class="solidcard">
        <div>POSTER</div>
        <div>DESCRIPTION</div>
        <div>PRICE</div>
        <div>LOCATION</div>
        <div>TIMESTAMP</div>
        <div class="grid-container">
          <div class="grid-child">TAG1</div>
          <div class="grid-child">TAG2</div>
          <div class="grid-child">TAG3</div>
        </div>
      </div>
    </a>

